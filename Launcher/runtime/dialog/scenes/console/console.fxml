                      <Insets />
                  </opaqueInsets>
                  <padding>
                      <Insets left="10.0" />
                  </padding>
              </TextField>
              <Button fx:id="send" defaultButton="true" layoutX="528.0" layoutY="8.0" prefHeight="30.0" prefWidth="147.0" text="Выполнить" />
         </children>
      </Pane>
    </children>
    <stylesheets>
        <URL value="@../../styles.css" />
        <URL value="@../../overlay/debug/debug.css" />
    </stylesheets>
</Pane>
